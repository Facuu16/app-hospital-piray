<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    tools:context=".fragment.VerificationFragment"
    android:background="@color/white" >

    <Button
        android:id="@+id/resend_code"
        android:layout_width="270dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginBottom="260dp"
        android:enabled="true"
        android:text=" Reenviar código"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="552dp"
        android:gravity="center"
        android:text="Hemos enviado un código de verificación a tu correo electrónico. Por favor, revisa tu bandeja de entrada y/o carpeta de correo no deseado. Copia el código y pégalo en la pantalla de verificación. Este código de verificación vencerá en 10 minutos."
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:text="Verificación"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/verification_code"
        android:layout_width="304dp"
        android:layout_height="48dp"
        android:layout_marginTop="264dp"
        android:autofillHints=""
        android:background="@drawable/edittext_background"
        android:gravity="center"
        android:hint=" Código de Verificación"
        android:inputType="text|number"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/accept"
        android:layout_width="270dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginBottom="328dp"
        android:enabled="true"
        android:text=" Aceptar"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>